<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
   version="4.0">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>ServletConnexion</servlet-name>
        <servlet-class>CulDeChouetteServlets.ServletConnexion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletConnexion</servlet-name>
        <url-pattern>/ServletConnexion</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletCreerCompte</servlet-name>
        <servlet-class>CulDeChouetteServlets.ServletCreerCompte</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletCreerCompte</servlet-name>
        <url-pattern>/ServletCreerCompte</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletModifierProfil</servlet-name>
        <servlet-class>CulDeChouetteServlets.ServletModifierProfil</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletModifierProfil</servlet-name>
        <url-pattern>/ServletModifierProfil</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletVerifierPseudo</servlet-name>
        <servlet-class>CulDeChouetteServlets.ServletVerifierPseudo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletVerifierPseudo</servlet-name>
        <url-pattern>/ServletVerifierPseudo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletPartieDemarre</servlet-name>
        <servlet-class>CulDeChouetteServlets.ServletPartieDemarre</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletPartieDemarre</servlet-name>
        <url-pattern>/ServletPartieDemarre</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>PageAccueil.jsp</welcome-file>
    </welcome-file-list>
</web-app>
